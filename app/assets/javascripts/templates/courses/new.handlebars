<h1>Create a Course</h1>

{{#form-for this}}
  {{#input name}}
    {{input-field name id="new-course-name"}}{{label-field "Course name"}}
    <br/>
    {{error-field name}}
  {{/input}}
  <br/>

  {{#input summary}}
    {{input-field summary as="text" cols="80" rows="6" id="new-course-summary"}}{{label-field "Course summary"}}
    <br/>
    {{error-field summary}}
  {{/input}}

  {{#if name}}
  	<button {{action "submit" this}} id="save-course">Create</button>
  {{else}}
  	<button disabled="true">Create</button>
  {{/if}}
  <button {{action "cancel" this}} id="cancel-new-course">Cancel</button>
{{/form-for}}
<br/>

{{outlet}}