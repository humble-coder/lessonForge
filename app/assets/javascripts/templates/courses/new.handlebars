<h1>Create a Course</h1>

{{#form-for this}}
  {{#input name}}
    {{input-field name id="new-course-name"}}{{label-field "Course name"}}
    <br/>
    {{error-field name}}
  {{/input}}
{{/form-for}}
<br/>

{{#if this.name}}
	<button {{action "save" this}} id="save-course">Create</button>
{{/if}}

{{outlet}}