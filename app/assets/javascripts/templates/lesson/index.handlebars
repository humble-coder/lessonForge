{{#each question in questions}}
  <span class="question-content">{{question.content}}</span>
  <br>
  {{#each answer in question.answers}}
  	<input type="radio">{{answer.content}}
  {{/each}}
  <br>
{{/each}}

<button {{action "edit" this}} id="edit-lesson">Edit</button>
<button {{action "delete" this}} id="delete-lesson">Delete</button>