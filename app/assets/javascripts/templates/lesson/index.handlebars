{{#each question in questions itemController="question"}}
  <span class="question-content">{{content.content}}</span>
  <br>
  <form>
    {{#if isMultipleChoice}}
      {{#each answer in answers itemController="answer"}}
        {{radio-button value=content name=question.content.id selection=question.responseContent class="mc-answer"}} {{content.content}} <br>
      {{/each}}
    {{else}}
      {{textarea cols="60" rows="10" class="essay-space" value=responseContent}}
    {{/if}}
    {{saveConfirmation}}
    <br/>
    <button {{action 'saveResponse'}} {{bind-attr disabled=lessonComplete}} class="save-response">Save Response</button>
  </form>
  <br>
{{else}}
   <b>This lesson has no questions.</b><br/>
{{/each}}

{{#if userIsOwner}}
	<button {{action "edit" this}} id="edit-lesson">Edit Lesson</button>
	<button {{action "delete" this}} id="delete-lesson">Delete Lesson</button>
{{/if}}

{{#if isComplete}}
  <button {{action "viewResponses"}} id="view-responses">View Your Responses</button>
{{else}}
  <button {{action "finishLesson"}} id="finish-lesson">Finish Lesson</button>
  (This button will be here until you respond to every question)
{{/if}}
