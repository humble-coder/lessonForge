{{#each question in questions}}
  <span class="question-content">{{question.content}}</span>
  <br>
  <form>
    <div class="answers">{{answer-select answers=question.answers question=question action="saveResponse"}}</div>
  </form>
  <br>
{{else}}
   <b>This lesson has no questions.</b><br/>
{{/each}}

{{#if userIsOwner}}
	<button {{action "edit" this}} id="edit-lesson">Edit Lesson</button>
	<button {{action "delete" this}} id="delete-lesson">Delete Lesson</button>
{{/if}}

{{#if userIsAuthenticated}}
  <button {{action "viewResponses"}} id="view-responses">View Your Responses</button>
{{/if}}