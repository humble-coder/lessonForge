<h2>Create a Lesson</h2>

{{#form-for this}}
  {{#input name}}
    {{input-field name id="new-lesson-name"}}{{label-field "Lesson name"}}
    <br/>
    {{error-field name}}
  {{/input}}
  {{#input summary}}
    {{input-field summary as="text" cols="80" rows="6" id="new-lesson-summary"}}{{label-field "Lesson summary"}}
    <br/>
    {{error-field summary}}
  {{/input}}
  {{#if name}}
    <button {{action "submit" this}} id="save-lesson">Create</button>
  {{else}}
    <button disabled="true">Create</button>
  {{/if}}
    <button {{action "cancel" this}} id="cancel-new-lesson">Cancel</button>
{{/form-for}}
<br/>